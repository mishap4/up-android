<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/door_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="5dp"
                android:text="@string/door_label"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/door_lock_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/door_label"
                android:textSize="20sp" />

            <Button
                android:id="@+id/door_lock_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/door_label"
                android:minWidth="120dp"
                android:text="@string/lock_label"
                android:layout_marginEnd="5dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/door_unlock_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/door_lock_button"
                android:layout_alignBaseline="@id/door_lock_button"
                android:minWidth="120dp"
                android:text="@string/unlock_label"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/output_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/output_label"
            android:textStyle="bold"
            android:textSize="20sp" />

        <ScrollView
            android:id="@+id/output_scroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/output_header"
            android:fillViewport="true">

            <TextView
                android:id="@+id/output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />
        </ScrollView>

        <ImageButton
            android:id="@+id/clear_output_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</LinearLayout>